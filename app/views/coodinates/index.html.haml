.index-body
  .index-body__header
    .head
      .head__search
        %input.head__search__input{placeholder: "コーディネートやユーザーを探す"}
        %i.fas.fa-search
      .head__logo
        = link_to "WEAR", "#", class: "head__logo__link"
      .head__user
        = link_to "#", class: "head__user__login" do
          = icon('fas', 'user-circle', class: "head__user__login--icon")
          ログイン
        |
        = link_to "#", class: "head__user__signup" do
          新規会員登録
  .index-body__nav
    .navber
      .navber__tab--active ALL
      = link_to "MEN", "#", class: "navber__tab"
      = link_to "WOMEN", "#", class: "navber__tab"
      = link_to "KIDS", "#", class: "navber__tab"
      = link_to "WORLD", "#", class: "navber__tab"
  .index-body__main
    .index-body__main__tab
      .switch
        .switch__active
          おすすめ
        = link_to "タイムライン", "#", class: "switch__btn"
    .index-body__main__contents
      .left
        .left__search
          %h1 探す
          .conteinar
            %i.fas.fa-camera.fa-fw
            = link_to "コーディネートを探す", "#", class: "search-one"
          .conteinar
            %i.far.fa-user.fa-fw
            = link_to "ユーザーを探す", "#", class: "search-one"
          .conteinar
            %i.fas.fa-tshirt.fa-fw
            = link_to "アイテムを探す", "#", class: "search-one"
          .conteinar
            %i.fas.fa-store-alt.fa-fw
            = link_to "ショップを探す", "#", class: "search-one"
          .conteinar
            %i.fas.fa-tag.fa-fw
            = link_to "ブランドを探す", "#", class: "search-one"
      .right